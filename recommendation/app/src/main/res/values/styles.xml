<resources>

  <!-- Base application theme. -->
  <style name="AppTheme.Recommendation" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/tfe_color_primary</item>
    <item name="colorPrimaryDark">@color/tfe_color_primary_dark</item>
    <item name="colorAccent">@color/tfe_color_accent</item>
  </style>

  <style name="AppTheme.Recommendation.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="AppTheme.Recommendation.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

  <style name="AppTheme.Recommendation.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
